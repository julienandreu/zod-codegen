{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/strict-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "complexity": ["error", 10],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
